<!-- views/product-detail.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detail Produk</title>
  <link rel="stylesheet" href="/css/tailwind.css">
</head>

<body class="bg-gray-100 p-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-semibold">Detail Produk</h1>
    <a href="/dashboard" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Kembali</a>
  </div>

  <% if (product) { %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <% if (product.img_url) { %>
        <img src="<%= product.img_url %>" alt="Gambar Produk" class="w-full h-[30%] object-cover">
        <% } %>
          <div class="p-4">
            <h2 class="text-2xl font-semibold mb-2 text-gray-800" id="nama_produk">
              <%= product.nama_produk %>
            </h2>
            <h3 class="text-xl font-semibold text-green-500" id="price">
              Rp <%= product.price %>
            </h3>
            <p class="mt-4 text-gray-600" id="description">
              <%= product.description %>
            </p>
            <!-- Tombol Checkout -->
            <form action="/checkout/<%= product._id %>" method="POST" class="mt-4 text-center"
              data-product='<%= JSON.stringify(product) %>'>
              <div class="mb-4">
                <label for="quantity" class="block text-gray-700 font-semibold mb-2">Jumlah:</label>
                <input type="number" id="quantity" name="quantity" value="1" min="1"
                  class="w-16 px-2 py-1 border rounded focus:outline-none focus:ring focus:border-blue-300">
              </div>
              <button type="submit"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Checkout</button>
            </form>
          </div>
    </div>

    <% } else { %>
      <p class="text-red-500">Produk tidak ditemukan.</p>
      <% } %>

        <script>
          document.addEventListener('submit', async (e) => {
            if (e.target.tagName === 'FORM') {
              e.preventDefault();
              const form = e.target; // Mendapatkan elemen form yang di-submit
              const quantity = parseInt(form.querySelector('#quantity').value);
              const product = JSON.parse(form.dataset.product);
              
              const response = await fetch(`/checkout/${product._id}`, {
                method: "POST",
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({ quantity }),
              })
              const responseData = await response.json();

              if (response.status === 200) {
                window.location.href = responseData.url;
              } else {
                console.log("gagal checkout");
              }
            }
          });
        </script>

</body>

</html>